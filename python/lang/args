import argparse

def main():
    parser = argparse.ArgumentParser()
    parser.add_argument('-t', '--type')
    parser.add_argument('-u', '--user')    
    args = parser.parse_args()
    print args
    print args.type
    print args.user   
if __name__ == "__main__":
    main()

